// it's gotta be an accurate heart beat 
bpm = 85
beat_duration = (60s / bpm)

heart_size = 260px

@import url('http://fonts.googleapis.com/css?family=Petit+Formal+Script')

body
	font-family 'Petit Formal Script', cursive

@keyframes beat
	0%
		transform scale(1) rotate(225deg)
		box-shadow 0 0 40px #d5093c
	50%
		transform scale(1.1) rotate(225deg)
		box-shadow 0 0 70px #d5093c
	100%
		transform scale(1) rotate(225deg)
		box-shadow 0 0 40px #d5093c

@keyframes beat2
	0%
		transform scale(1)
	50%
		transform scale(1.1)
	100%
		transform scale(1)

#chest
	position relative
	width heart_size*2
	height heart_size*2
	margin 0 auto

#background
	background #ffa5a5
	background linear-gradient(top, #ffa5a5 0%, #ffd3d3 100%)
	position fixed
	top 0
	left 0
	z-index -1
	width 100%
	height 100%

.heart
	z-index 2
	background linear-gradient(right, #F50A45 0%, #d5093c 40%)
	animation beat beat_duration ease 0s infinite normal

	&.center
		background linear-gradient(left top, #B80734 0%,#d5093c 40%)

	&.top
		z-index 3

.side
	position absolute
	top 50px
	width heart_size
	height heart_size
	border-radius heart_size

.center
	position relative
	top 162px
	width heart_size * (21/22)
	height heart_size * (21/22)
	margin auto
	font-size 0
	text-indent -9999px

.left
	left 6%

.right
	right 6%

h1
	color white
	z-index 4
	position relative
	width 100%
	text-align center
	top -50px
	margin auto
	animation beat2 beat_duration ease 0s infinite normal

span#name
	font-size 50px
	line-height 120px

h2
	position relative
	top 80px
	font-size 30px
	text-shadow: 0px 2px 0px #ffffff
